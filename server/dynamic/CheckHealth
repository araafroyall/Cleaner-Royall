#!/system/bin/sh

life_path="/sys/block/mmcblk0/device/life_time"
eol_path="/sys/block/mmcblk0/device/pre_eol_info"

life=$(cat "$life_path" 2>/dev/null)
eol=$(cat "$eol_path" 2>/dev/null)

life1=$(echo "$life" | awk '{print $1}')
life2=$(echo "$life" | awk '{print $2}')

[ -z "$life1" ] && life1="00"
[ -z "$life2" ] && life2="00"
[ -z "$eol" ] && eol="00"

slc=$(printf "%d" 0x$life1)
mlc=$(printf "%d" 0x$life2)
eol_d=$(printf "%d" 0x$eol)

life1_fmt=$(printf "0x%02X" 0x$life1)
life2_fmt=$(printf "0x%02X" 0x$life2)
eol_fmt=$(printf "0x%02X" 0x$eol)

echo "============================="
echo " ğŸ“Š eMMC Health Monitor"
echo "============================="
echo "ğŸ“¦ SLC Life Used : $slc ($life1_fmt)"
echo "ğŸ“¦ MLC Life Used : $mlc ($life2_fmt)"

if [ "$slc" -lt 5 ] && [ "$mlc" -lt 5 ]; then
  echo "âœ… Life Status    : Excellent"
elif [ "$slc" -lt 10 ] && [ "$mlc" -lt 10 ]; then
  echo "ğŸŸ¡ Life Status    : Moderate Usage"
elif [ "$slc" -lt 12 ] && [ "$mlc" -lt 12 ]; then
  echo "âš ï¸  Life Status    : High Wear (80-90%)"
else
  echo "âŒ Life Status    : Near Failure (>90%)"
fi

case "$eol_d" in
  1)
    echo "â³ Pre-EOL Info   : 01 (Normal)"
    echo "âœ… eMMC Status    : Currently working normal"
    ;;
  2)
    echo "â³ Pre-EOL Info   : 02 (Warning)"
    echo "âš ï¸  eMMC Status    : Warning, nearing end-of-life"
    ;;
  3)
    echo "â³ Pre-EOL Info   : 03 (Critical)"
    echo "âŒ eMMC Status    : Critical, failure imminent"
    ;;
  *)
    echo "â³ Pre-EOL Info   : Unknown (Raw: 0x$eol | Dec: $eol_d)"
    echo "â“ eMMC Status    : Unable to interpret pre-eol value: raw=0x$eol dec=$eol_d"
    ;;
esac


echo ""
echo "------------------------------"
#!/system/bin/sh

echo "ğŸ“ eMMC Info:"

model=$(cat /sys/block/mmcblk0/device/name 2>/dev/null)
vendor=$(cat /sys/block/mmcblk0/device/manfid 2>/dev/null)
size=$(cat /sys/block/mmcblk0/size 2>/dev/null)

[ -z "$model" ] && model="(empty)"
[ -z "$vendor" ] && vendor="(empty)"
[ -z "$size" ] && size=0

size_gb=$(awk "BEGIN { printf \"%.2f\", ($size * 512) / (1024*1024*1024) }")

echo "ğŸ“Œ Model   : $model"
echo "ğŸ·ï¸  Vendor  : $vendor"
echo "ğŸ’¾ Capacity: ${size_gb} GB"



echo "============================="
echo "Feature is provided by Araaf Royall"